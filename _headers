# Netlify Headers for Security and Performance
# This file configures HTTP headers for enhanced security and performance

# Security Headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: "1; mode=block"
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Content Security Policy
/*
  Content-Security-Policy: default-src 'self' https:unpkg.com https://pl28407776.effectivegatecpm.com https://pl28412316.effectivegatecpm.com https://www.effectivegatecpm.com https://www.googletagmanager.com https://www.google-analytics.com https://pagead2.googlesyndication.com https://googleads.g.doubleclick.net https://fonts.googleapis.com https://cdnjs.cloudflare.com https://ep1.adtrafficquality.google; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://pl28407776.effectivegatecpm.com https://pl28412316.effectivegatecpm.com https://www.effectivegatecpm.com https://www.googletagmanager.com https://www.google-analytics.com https://pagead2.googlesyndication.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob: https://googleads.g.doubleclick.net; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; connect-src 'self' https://www.google-analytics.com https://api.github.com https://effectivegatecpm.com https://ep1.adtrafficquality.google; media-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-src https://googleads.g.doubleclick.net; frame-ancestors https://googleads.g.doubleclick.net; upgrade-insecure-requests

# Performance Headers
/*
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

# Static Assets
*.css
  Cache-Control: public, max-age=86400, must-revalidate
*.js
  Cache-Control: public, max-age=86400, must-revalidate
*.png
  Cache-Control: public, max-age=31536000, immutable
*.jpg
  Cache-Control: public, max-age=31536000, immutable
*.jpeg
  Cache-Control: public, max-age=31536000, immutable
*.gif
  Cache-Control: public, max-age=31536000, immutable
*.webp
  Cache-Control: public, max-age=31536000, immutable
*.svg
  Cache-Control: public, max-age=31536000, immutable
*.woff
  Cache-Control: public, max-age=31536000, immutable
*.woff2
  Cache-Control: public, max-age=31536000, immutable

# HTML Files
*.html
  Cache-Control: public, max-age=0, must-revalidate

# API Endpoints
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest
/manifest.json
  Cache-Control: public, max-age=86400

# Security for Forms
/forms/*
  X-Frame-Options: DENY
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; form-action 'self'

# CORS Headers (if needed)
/api/*
  Access-Control-Allow-Origin: https://klaus-portifolio-website.netlify.app
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization, X-CSRF-Token
  Access-Control-Allow-Credentials: true
